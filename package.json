{
  "name": "pokedex",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "clean:all": "turbo run clean && rm -rf .turbo && rm -rf node_modules && rm -rf apps/*/node_modules && rm -rf packages/*/node_modules",
    "clean:cache": "rm -rf .turbo",
    "deploy": "turbo run deploy",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.3",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.82.0",
    "firebase": "^11.10.0"
  }
}
