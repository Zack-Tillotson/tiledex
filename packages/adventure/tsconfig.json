{
  "extends": "../../packages/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react",
    "esModuleInterop": true,
    "plugins": [{ "name": "next" }],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/types/*.d.ts"],
  "exclude": ["node_modules", "dist"]
} 